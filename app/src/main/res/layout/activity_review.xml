<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafdff"
    android:orientation="vertical"
    tools:context=".Activity.ForReview.ReviewActivity">

    <!--네이게이션 바(뒤로가기) 넣기-->
    <LinearLayout
        android:id="@+id/info_box"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/binfo_fr_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/binfo_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/back_white" />

        </FrameLayout>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="새 리뷰 작성"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/book_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_book"
            android:layout_gravity="center_vertical"
            android:layout_width="95dp"
            android:layout_height="95dp" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorText"
            android:layout_marginHorizontal="15dp"
            android:textSize="19dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="#a3bccc"
        android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:id="@+id/ratingbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center"
                    android:text="별점주기"
                    android:textColor="@color/colorText"
                    android:layout_gravity="center_vertical"
                    android:textSize="17sp" />

                <RatingBar
                    android:id="@+id/ratingbarIndicator"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    android:numStars="0"
                    android:rating="5"
                    android:stepSize="1"
                    android:theme="@style/RatingBar"
                    android:layout_marginStart="12dp"
                    tools:layout_editor_absoluteX="85dp"
                    tools:layout_editor_absoluteY="80dp" />

                <TextView
                    android:id="@+id/text_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="15dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="#a3bccc"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="후기 작성"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorText"
            android:textSize="18dp" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner_shape_edittext">
        <EditText
            android:id="@+id/edit_review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:enabled="true"
            android:hint="내용을 입력하세요"
            android:inputType="textMultiLine"
            android:background="@null"
            android:maxLength="500"
            android:textColorHint="#666"
            android:scrollHorizontally="false"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:overScrollMode="always"
            android:textSize="16sp"
            android:gravity="top|left"
            android:textColor="#000" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="태그추가"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/colorText"
            android:textSize="18dp" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner_shape_edittext">

        <EditText
            android:id="@+id/edit_tag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="#..."
            android:textColorHint="#666"
            android:textSize="16sp"
            android:inputType="textAutoComplete|textMultiLine"
            android:background="@null"
            android:textColor="#000"
            app:layout_constraintVertical_bias="0.868"
            android:scrollHorizontally="false"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:overScrollMode="always" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:padding="5dp">

            <Button
                android:id="@+id/push_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/book_tag"
                android:background="@drawable/custom_button_pre"
                android:text="게시하기"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />


            <FrameLayout
                android:id="@+id/share_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/kakao_icon" />
        </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>