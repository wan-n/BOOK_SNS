<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:padding="5dp"
    android:background="@color/colorBase"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/box_user"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.instabook.Activity.CircularImageView
            android:id="@+id/uf_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/default_img">

        </com.example.instabook.Activity.CircularImageView>

        <LinearLayout
            android:id="@+id/box_NickRate"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/box_NickDateMenu"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_nick"
                    android:layout_width="145dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorText"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:textColor="@color/colorText"
                    android:textSize="10dp" />

                <ImageButton
                    android:id="@+id/btn_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:onClick="menuOnClick"
                    android:padding="0dp"
                    android:src="@drawable/more_black" />

            </LinearLayout>

            <RatingBar
                android:id="@+id/ratingbarSmall"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:rating="5"
                android:stepSize="1"
                android:theme="@style/RatingBar"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="80dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/box_book"
        android:padding="3dp"
        android:orientation="horizontal"
        android:layout_below="@+id/box_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="도서"
            android:textColor="@color/colorText"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/txt_bname"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:textSize="13dp" />

        <ImageButton
            android:id="@+id/imgbtn_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:onClick="onClick"
            android:tint="#E91E63" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/box_book"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/txt_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colortxtBase"
            android:scrollbars="vertical"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/txt_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF" />

    </LinearLayout>


</RelativeLayout>
